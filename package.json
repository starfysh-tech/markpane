{
  "name": "markpane",
  "version": "1.3.0",
  "description": "A lightweight Electron viewer that renders markdown files with mermaid diagram support",
  "main": "src/main.js",
  "bin": "./bin/markpane.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:quicklook": "./scripts/build-quicklook.sh",
    "build:mac": "./scripts/build-quicklook.sh && electron-builder --mac && ./scripts/notarize.sh",
    "build:mas": "./scripts/build-quicklook.sh && electron-builder --mac mas"
  },
  "keywords": [
    "markdown",
    "mermaid",
    "viewer",
    "electron"
  ],
  "author": "Starfysh, LLC",
  "license": "MIT",
  "copyright": "Â© 2026 Starfysh, LLC",
  "dependencies": {
    "dompurify": "^3.0.0",
    "github-slugger": "^2.0.0",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "mermaid": "^10.9.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.markpane.app",
    "productName": "MarkPane",
    "icon": "assets/icon.png",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "identity": "Starfysh, LLC (A3KNB5VZH2)",
      "signIgnore": [
        "MarkPaneQLHost\\.app\\.bundled"
      ],
      "target": ["dmg"],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "mas": {
      "type": "distribution",
      "category": "public.app-category.developer-tools",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "hardenedRuntime": false,
      "provisioningProfile": "build/embedded.provisionprofile"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/quicklook/MarkPaneQLHost.app.bundled",
        "to": "MarkPaneQLHost.app.bundled"
      }
    ]
  }
}
